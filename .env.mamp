# PDFSiegel Environment für MAMP Integration
# Lädt nur MySQL und PHPMyAdmin, Backend/Frontend über MAMP

# Database Configuration (Docker MySQL)
DB_PORT=3306
DB_HOST=localhost
DB_NAME=pdfsiegel
DB_USER=pdfuser
DB_PASS=pdfpass

# Backend Configuration (MAMP)
BACKEND_PORT=disabled  # Backend läuft über MAMP:8888
ENVIRONMENT=mamp
MOCK_MODE=true
LOCAL_SERVER=mamp

# Frontend Configuration (MAMP oder npm start)
FRONTEND_PORT=disabled  # Frontend läuft über npm start:3000
REACT_APP_BACKEND_URL=http://localhost:8888
REACT_APP_ENV=mamp

# Tools Configuration
PHPMYADMIN_PORT=8080

# Debug Settings
DEBUG_MODE=true

# MAMP spezifische Einstellungen
MAMP_HTDOCS=/Applications/MAMP/htdocs
MAMP_MYSQL_PORT=8889
MAMP_APACHE_PORT=8888
